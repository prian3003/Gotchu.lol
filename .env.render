# Render Environment Variables Template
# Copy these to your Render dashboard

# Database
DATABASE_URL=postgres://gotchu_user:password@hostname:5432/gotchu

# Redis
REDIS_URL=redis://hostname:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-generated-by-render

# CORS
CORS_ORIGINS=https://gotchu.vercel.app,http://localhost:5173

# Environment
ENVIRONMENT=production
PORT=10000

# Email (if using)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# File Upload (if using)
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif